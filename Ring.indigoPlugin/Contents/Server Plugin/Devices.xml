            <State id="lastEventTime">
                <ValueType>String</ValueType>
                <TriggerLabel>lastEventTime</TriggerLabel>
                <ControlPageLabel>lastEventTime</ControlPageLabel>
            </State>
            <State id="lastAnswered">
                <ValueType>Boolean</ValueType>
                <TriggerLabel>lastAnswered</TriggerLabel>
                <ControlPageLabel>lastAnswered</ControlPageLabel>
            </State>
            <State id="model">
                <ValueType>String</ValueType>
                <TriggerLabel>model</TriggerLabel>
                <ControlPageLabel>model</ControlPageLabel>
            </State>
            <State id="firmware">
                <ValueType>String</ValueType>
                <TriggerLabel>firmware</TriggerLabel>
                <ControlPageLabel>firmware</ControlPageLabel>
            </State>
            <State id="batteryLevel">
                <ValueType>Integer</ValueType>
                <TriggerLabel>Battery Power Level (Percentage)</TriggerLabel>
                <ControlPageLabel>Battery Power Level (Percentage)</ControlPageLabel>
            </State>
            <State id="recordingUrl">
                <ValueType>String</ValueType>
                <TriggerLabel>RecordingUrl</TriggerLabel>
                <ControlPageLabel>RecordingUrl</ControlPageLabel>
            </State>
        </States>
